<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
       
      </div>
    
    </div>
    
    <% if (username) { %>
      <form class="form-inline" action="/logout" method="POST" style="justify-self: end;">
        <div> logged in as:<%= username %> User!</div>
             
        <div class="form-group mb-2" style="justify-self: end;" >
         
         
          <button type="submit" >logout</button>
        </div>
      </form>
   <% } else { %>
    <form class="form-inline" action="/login" method="POST" style="justify-self: end;">
      
           
      <div class="form-group mb-2" style="justify-self: end;" >
       
        <input
          class="form-control"
          type="text"
          name="username"
          
          placeholder="username"
          style="width: 300px; margin: 1em"
        />
        <button type="submit" >login</button>
      </div>
    </form>
   <% } %>
    
  </nav>
</header>